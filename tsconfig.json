{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "commonjs",
        "target": "ES6",
        "lib": ["ES6"],
        "checkJs": true,
        "allowJs": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*.js"
    ]
}